<?xml version="1.0"?>
<robot name="pro_4WD"
  xmlns:xacro="http://ros.org/wiki/xacro">
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>

  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <xacro:property name="PI" value="3.1415926535897931" />

  <link name="base_footprint"/>

  <link name="chassis_link">
    <visual>
      <origin xyz="0.142 0 0" rpy="${pi / 2} 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://roverrobotics_description/meshes/pro_4WD/pro_4WD_core.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.42 0.25 0.12"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="7.5" />
      <inertia ixx="1.340e-1" ixy="0.0" iyy="1.713e-1" ixz="0.0" iyz="1.815e-3" izz="5.917e-2" />
    </inertial>
  </link>

  <joint name="footprint_chassic_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0.14" rpy="0 0 0"/>
  </joint>

  <link name="left_front_wheel_link">
    <visual>
      <origin xyz="0 -0.18 0" rpy="0 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://roverrobotics_description/meshes/pro_4WD/LeftFrontWheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi / 2} 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25" />
      <inertia ixx="7.750e-3" ixy="0.0" iyy="4.546e-3" ixz="0.0" iyz="1.478e-5" izz="4.545e-3" />
    </inertial>
  </link>

  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="left_front_wheel_link"/>
    <origin xyz="0.142 0.18 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_front_wheel_link">
    <visual>
      <origin xyz="0 0.18 0" rpy="0 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://roverrobotics_description/meshes/pro_4WD/RightFrontWheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi / 2} 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25" />
      <inertia ixx="7.750e-3" ixy="0.0" iyy="4.546e-3" ixz="0.0" iyz="1.478e-5" izz="4.545e-3" />
    </inertial>
  </link>

  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="right_front_wheel_link"/>
    <origin xyz="0.142 -0.18 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="left_rear_wheel_link">
    <visual>
      <origin xyz="0.284 -0.18 0" rpy="${pi / 2} 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://roverrobotics_description/meshes/pro_4WD/LeftRearWheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi / 2} 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25" />
      <inertia ixx="7.750e-3" ixy="0.0" iyy="4.546e-3" ixz="0.0" iyz="1.478e-5" izz="4.545e-3" />
    </inertial>
  </link>

  <joint name="left_rear_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="left_rear_wheel_link"/>
    <origin xyz="-0.142 0.18 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_rear_wheel_link">
    <visual>
      <origin xyz="0.284 0.18 0" rpy="${pi / 2} 0 ${pi / 2}"/>
      <geometry>
        <mesh filename="package://roverrobotics_description/meshes/pro_4WD/RightRearWheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi / 2} 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25" />
      <inertia ixx="7.750e-3" ixy="0.0" iyy="4.546e-3" ixz="0.0" iyz="1.478e-5" izz="4.545e-3" />
    </inertial>
  </link>

  <joint name="right_rear_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="right_rear_wheel_link"/>
    <origin xyz="-0.142 -0.18 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Use this point to link your sensors -->
  <link name="mount_point_link"/>

  <joint name="mount_point_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="mount_point_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>
</robot>
